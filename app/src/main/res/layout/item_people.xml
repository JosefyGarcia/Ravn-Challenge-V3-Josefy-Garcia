<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_title_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/generic_margin"
        android:layout_marginTop="@dimen/generic_margin"
        android:layout_marginEnd="@dimen/generic_margin"
        android:textAppearance="@style/labelTitleTextAppearance"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/test_text_title_item" />

    <TextView
        android:id="@+id/lbl_subtitle_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/generic_margin"
        android:textAppearance="@style/labelSubTitleTextAppearance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lbl_title_item"
        app:layout_constraintStart_toStartOf="@+id/lbl_title_item"
        app:layout_constraintTop_toBottomOf="@+id/lbl_title_item"
        tools:text="@string/test_text_subtitle_item" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/generic_margin"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_subtitle_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lbl_title_item"
        app:srcCompat="@drawable/right_arrow" />
</androidx.constraintlayout.widget.ConstraintLayout>